{
    "swagger": "2.0",
    "info": {
       "version": "1.0.0",
       "title": "weather Api"
    },
    "host": "localhost:8080",
    "basePath": "/",
    "schemes": [
       "http"
    ],
    "consumes": [
       "application/json"
    ],
    "produces": [
       "application/json"
    ],
    "paths": {
       "/weather": {
          "get": {
             "summary": "get temperature",
             "description": "get temperature",
             "operationId": "GetOperations",
             "parameters": [
                {
                   "name": "city",
                   "in": "query",
                   "description": "city name",
                   "type": "string"
                }
             ],
             "responses": {
                "200": {
                   "description": "success",
                   "schema": {
                      "type": "object",
                      "properties": {
                         "temperature": {
                            "type": "number"
                         }
                      }
                   }
                }
             }
          }
       }
    }
 }